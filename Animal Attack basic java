var earLX=160;
var earLY=120;
var earW=50;
var earH=150;

draw= function() {
    background(155, 221, 222);
    //ears
    fill(232, 132, 132);
    ellipse(earLX,earLY,earW,earH);
    ellipse (earLX+90,earLY,earW,earH);
    
    //face
    fill(224, 204, 105);
    ellipse(earLX+40,earLY+136,250,250);
    
    //eyes
    fill(237, 233, 118);
    ellipse(earLX-20,earLY+80,30,30);
    ellipse(earLX+85,earLY+80,30,30);
    
    //mouth
    fill(242, 237, 237);
    arc(earLX+40,earLY+120,100,100,1,180);
    
earLY=earLY+1;
earLX=earLX+2;
earW=earW*99/100;
earH=earH*99/100;
    
};
